{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#e0e0e0",
        "strokeWidth": 1,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/touristarrivalsbystate.csv"
            },
            "key": "STATES",
            "fields": ["PROPORTION OF TOURIST"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "PROPORTION OF TOURIST",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [15, 30, 45, 60, 75],
            "scheme": "purples"
          },
          "title": "% of Tourists",
          "legend": {
            "orient": "none",
            "direction": "vertical",
            "legendX": 630,
            "legendY": 100,
            "titleAlign": "left",
            "titleAnchor": "start"
          }
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "PROPORTION OF TOURIST", "title": "Tourist Percentage"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "ne_10m_populated_places"}
      },
      "transform": [
        {
          "filter": "(datum.properties.FEATURECLA == 'Admin-1 capital') || (datum.properties.ADM0CAP == 1 && datum.properties.ADM1NAME != 'Selangor')"
        },
        {
          "calculate": "datum.properties.ADM0CAP == 1 ? 2 : (datum.properties.FEATURECLA == 'Admin-1 capital' ? 1 : 0)",
          "as": "rankScore"
        },
        {
          "window": [{"op": "row_number", "as": "rownum"}],
          "groupby": ["properties.ADM1NAME"],
          "sort": [
            {"field": "rankScore", "order": "descending"},
            {"field": "properties.POP_MAX", "order": "descending"}
          ]
        },
        {"filter": "datum.rownum == 1"}
      ],
      "mark": {"type": "point", "color": "red", "size": 90},
      "encoding": {
        "longitude": {"field": "properties.LONGITUDE"},
        "latitude": {"field": "properties.LATITUDE"},
        "tooltip": [
          {"field": "properties.NAME", "title": "Capital City"},
          {"field": "properties.ADM1NAME", "title": "State"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "ne_10m_populated_places"}
      },
      "transform": [
        {
          "filter": "(datum.properties.FEATURECLA == 'Admin-1 capital') || (datum.properties.ADM0CAP == 1 && datum.properties.ADM1NAME != 'Selangor')"
        },
        {
          "calculate": "datum.properties.ADM0CAP == 1 ? 2 : (datum.properties.FEATURECLA == 'Admin-1 capital' ? 1 : 0)",
          "as": "rankScore"
        },
        {
          "window": [{"op": "row_number", "as": "rownum"}],
          "groupby": ["properties.ADM1NAME"],
          "sort": [
            {"field": "rankScore", "order": "descending"},
            {"field": "properties.POP_MAX", "order": "descending"}
          ]
        },
        {"filter": "datum.rownum == 1"}
      ],
      "mark": {
        "type": "text",
        "dy": -10,
        "fontSize": 10,
        "color": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "longitude": {"field": "properties.LONGITUDE"},
        "latitude": {"field": "properties.LATITUDE"},
        "text": {"field": "properties.NAME"}
      }
    }
  ],
  "config": {
    "legend": {
      "labelFontSize": 11,
      "titleFontSize": 12
    }
  }
}
