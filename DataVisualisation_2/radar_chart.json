{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 620,
  "height": 500,
  "padding": 40,
  "autosize": {"type": "none", "contains": "padding"},
  "background": "white",

  "signals": [
    {"name": "radius", "update": "width / 4.3"}
  ],

  "data": [
    {
      "name": "table",
      "values": [
        {"key": "Attractions & Culture", "value": 76, "category": 0},
        {"key": "Entertainment & Atmosphere", "value": 0, "category": 0},
        {"key": "Shopping & Goods", "value": 28, "category": 0},
        {"key": "Food & Dining", "value": 92, "category": 0},
        {"key": "Facilities & Accommodation", "value": 44, "category": 0},
        {"key": "Transport", "value": 10, "category": 0},
        {"key": "Safety & Hygiene", "value": 18, "category": 0},
        {"key": "People & Hospitality", "value": 100, "category": 0}
      ]
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [{"type": "aggregate", "groupby": ["key"]}]
    },
    {
      "name": "annotation",
      "values": [
        {
          "key": "People & Hospitality",
          "note": "100% satisfaction - visitors praised locals' warmth and helpfulness!"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "key"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": [0, 100],
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "category"},
      "range": {"scheme": "reds"}
    }
  ],

  "encode": {
    "enter": {
      "x": {"signal": "radius + 130"},
      "y": {"signal": "radius + -5"}
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {"facet": {"data": "table", "name": "facet", "groupby": ["category"]}},
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"},
              "y": {"signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"},
              "stroke": {"scale": "color", "field": "category"},
              "strokeWidth": {"value": 1},
              "fill": {"scale": "color", "field": "category"},
              "fillOpacity": {"value": 0.10}
            }
          }
        },
        {
          "type": "text",
          "name": "value-text",
          "from": {"data": "category-line"},
          "encode": {
            "enter": {
              "x": {"signal": "datum.x"},
              "y": {"signal": "datum.y"},
              "text": {"signal": "format(datum.datum.value, '.0f')"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "fontSize": {"value": 14},
              "fontWeight": {"value": "bold"},
              "fill": {"value": "black"},
              "tooltip": {
                "signal": "{'Category:': datum.datum.key, 'Satisfaction Percentage:': datum.datum.value}"
              }
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "keys"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {"signal": "radius * cos(scale('angular', datum.key))"},
          "y2": {"signal": "radius * sin(scale('angular', datum.key))"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "keys"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {"signal": "(radius + 10) * cos(scale('angular', datum.key))"},
          "y": {"signal": "(radius + 10) * sin(scale('angular', datum.key))"},
          "text": {"field": "key"},
          "align": [
            {"test": "abs(scale('angular', datum.key)) > PI / 2", "value": "right"},
            {"value": "left"}
          ],
          "baseline": [
            {"test": "scale('angular', datum.key) > 0", "value": "top"},
            {"test": "scale('angular', datum.key) == 0", "value": "middle"},
            {"value": "bottom"}
          ],
          "fill": {"value": "black"},
          "fontSize": {"value": 14},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },

   
    {
      "type": "group",
      "name": "annotation-group",
      "from": {"data": "annotation"},
      "encode": {
        "enter": {
          "x": {"signal": "scale('radial', 100) * cos(scale('angular', datum.key))"},
          "y": {"signal": "scale('radial', 100) * sin(scale('angular', datum.key))"}
        }
      },
      "marks": [
        {
          "type": "path",
          "encode": {
            "enter": {
              "path": {
                "signal": "'M4,1 L-25,-30'"
              },
              "stroke": {"value": "#800000"},
              "strokeWidth": {"value": 2}
            }
          }
        },
        {
          "type": "text",
          "encode": {
            "enter": {
              "x": {"value": -155},
              "y": {"value": -60},
              "text": {"value": ["Malaysia's genuine warmth","and friendliness make","visitors feel at home,"," earning a perfect score"]},
              "fontSize": {"value": 11},
              "fill": {"value": "#800000"},
              "fontWeight": {"value": "bold"},
              "align": {"value": "left"},
              "baseline": {"value": "bottom"}
            }
          }
        }
      ]
    }
  ]
}
