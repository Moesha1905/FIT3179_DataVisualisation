{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 300,
  "projection": {
    "type": "equalEarth",
    "scale": 1990,
    "center": [115, 4],
    "translate": [600, 150]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#e0e0e0",
        "strokeWidth": 1.0,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/malaysia_majcities.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/Homework_W9/touristarrivalsbystate.csv"
            },
            "key": "STATES",
            "fields": ["PROPORTION OF TOURIST"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "PROPORTION OF TOURIST",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [15, 30, 45, 60, 75],
            "scheme": "reds"
          },
          "title": "Percentage of Tourists"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "PROPORTION OF TOURIST", "title": "Tourist Percentage"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "x1": 101.6869,
            "y1": 3.139,
            "x2": 103.5,
            "y2": 6
          }
        ]
      },
      "mark": {
        "type": "rule",
        "stroke": "#bbbbbb",
        "strokeWidth": 0.8
      },
      "encoding": {
        "longitude": {"field": "x1"},
        "latitude": {"field": "y1"},
        "longitude2": {"field": "x2"},
        "latitude2": {"field": "y2"}
      }
    },
    {
      "data": {
        "values": [
          {
            "note": ["Kuala Lumpur has the highest tourist proportion,", "with almost 269 tourist attractions!"],
            "longitude": 103.5,
            "latitude": 6
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#222"
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "note"}
      }
    }
  ],
  "config": {
    "legend": {
      "labelFontSize": 10,
      "titleFontSize": 11,
      "orient": "right",
      "symbolSize": 10
    }
  }
}
