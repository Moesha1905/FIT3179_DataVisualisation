{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Slope chart showing change in transport mode tourist numbers between 2010 and 2019, with labels at 2016.",
  "data": {
    "url": "https://raw.githubusercontent.com/Moesha1905/FIT3179_DataVisualisation/refs/heads/main/DataVisualisation_2/transport.csv",
    "format": {"type": "csv"}
  },
  "width": 400,
  "height": 400,
  "padding": {"left": 40, "right": 20},

  "encoding": {
    "x": {
      "field": "YEAR",
      "type": "ordinal",
      "axis": {"title": null, "labelAngle": 0,"labelFontSize":10}
    },
    "y": {
      "field": "VALUE",
      "type": "quantitative",
      "axis": {"title": null, "grid": false, "format": ",.0f", "labelFontSize":10}
    },
    "color": {
      "field": "MODE",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": ["LAND", "AIR", "SEA", "RAIL"],
        "range": ["#d62828", "#f28482", "#f4a261", "#8d99ae"]
      }
    },
    "detail": {"field": "MODE"},
    "tooltip": [
      {"field": "MODE", "type": "nominal", "title": "Mode of Transport:"},
      {"field": "YEAR", "type": "ordinal", "title": "Year:"},
      {"field": "VALUE", "type": "quantitative", "title": "Number of Tourists:", "format": ",.0f"}
    ]
  },

  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 2, "opacity": 0.8, "clip": false}
    },
    {
      "mark": {"type": "point", "filled": true, "size": 70, "clip": false}
    },
    {
      "transform": [
        {"filter": "datum.YEAR == 2016"},
        {"calculate": "datum.MODE", "as": "label"}
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -8,
        "baseline": "middle",
        "fontSize": 10,
        "fontWeight": "bold",
        "clip": false
      },
      "encoding": {
        "text": {"field": "label", "type": "nominal"},
        "color": {"field": "MODE", "type": "nominal"}
      }
    },
    {
      "transform": [
        {"filter": "datum.YEAR == 2019"},
        {"calculate": "format(datum.VALUE, ',.0f')", "as": "label"}
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8,
        "baseline": "middle",
        "fontSize": 10,
        "clip": false
      },
      "encoding": {
        "text": {"field": "label", "type": "nominal"},
        "color": {"field": "MODE", "type": "nominal"}
      }
    }
  ],

  "config": {
    "view": {"stroke": "transparent", "clip": false},
    "axis": {"domain": false, "ticks": false, "labelFontSize": 12}
  }
}
